---
const alumni = [
  { name: 'K.H. Yahya Cholil Staquf', desc: 'Ketua Umum PBNU...', img: 'https://placeholder.co/200x200?text=Yahya' },
  // Tambahkan yang lain
];
---
<section class="bg-primary text-white py-8">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center">Profil Alumni</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
      {alumni.map(person => (
        <div class="bg-white text-primary p-4 shadow flex">
          <img src={person.img} alt={person.name} class="w-1/3" />
          <div class="p-4">
            <h3 class="font-bold">{person.name}</h3>
            <p>{person.desc}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>